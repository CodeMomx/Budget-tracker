<!doctype html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Ribeye+Marrow&display=swap" rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Notable&display=swap" rel="stylesheet">
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

      
        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well" style="display:none">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>

        <main>
          
        <div class="col-sm-6">
          <h3>Budget</h3>
          <form action="/messages" method="POST">

            <input name="description" placeholder="budget title">
            <input name="allocated" type="number" placeholder="amount allocated">
            <input name="spent" type="number" placeholder="amount spent">
            <input name="amountLeft" type="number" placeholder="balance" disabled>
            <button class="submit-btn" type="submit">submit</button>
          </form>

          <ul class="messages">
            <% for(var i=0; i<budget.length; i++) {%>
              <li class="message">
                <span><%= budget[i].description %></span>
                <span><%= budget[i].allocated %></span>
                <span><%= budget[i].spent %></span>
                <span><%= budget[i].amountLeft %></span>
                <span><i class="fa fa-star" aria-hidden="true" style="color:<%= budget[i].starBackground %>"></i></span>
                <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
              </li>
            <% } %>
            </ul>
          </main>


</div>

<script src="main.js"></script>

</body>
</html>
